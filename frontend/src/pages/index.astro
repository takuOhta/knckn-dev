---
/**
 * astro
 */
import { Image } from "astro:assets";

/**
 * constants
 */
import { PAGE } from "@constants/page";

/**
 * layouts
 */
import Layout from "@layouts/Layout.astro";

/**
 * components
 */

/**
 * variables
 */
const PAGE_ID = PAGE.INDEX.ID;
const PAGE_CLASSNAME = PAGE.INDEX.CLASSNAME;
