<style lang="scss">
  $PAGE_CLASSNAME: 'webgl';
  .p-#{$PAGE_CLASSNAME} {
    width: 100%;
    height: 100vh;
  }

  .canvas-wrapper {
    position: fixed;
    display: block;
    width: 100%;
    height: 100dvh;
    background: $color-bg-body;
    > canvas {
      width: 100%;
      height: 100%;
    }
  }

  .links {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    width: 100%;
    @include media-pc {
      padding-top: size-variable-pc(64);
      padding-bottom: size-variable-pc(64);
      gap: size-variable-pc(80);
    }
    @include media-sp {
    }
    .link {
      @include font-en-semibold();
      @include media-pc {
        font-size: size-variable-pc(120);
        letter-spacing: -0.08em;
        line-height: 1;
      }
      @include media-sp {
      }
      @include hover((color, scale));
    }
  }
</style>

<script>
  // /**
  // * @description クライアントサイドで実行されるスクリプトはここに記述します。
  // */
  import { IndexShaderCanvas } from '@scripts/pages/webgl/Index/IndexShaderCanvas'
  import { BaseHoverTransition } from '@scripts/utils/BaseHoverTransition'

  // canvasタグの設定
  class AstroCanvas extends HTMLElement {
    #rootElement: HTMLElement
    #canvas: IndexShaderCanvas
    constructor() {
      super()
      this.#rootElement = this
      this.#canvas = new IndexShaderCanvas({ element: this.#rootElement })
    }

    /**
     * init canvas
     */
    #initCanvas() {}
  }
  customElements.define('astro-canvas', AstroCanvas)

  // ホバー初期化
  const hoverElements = document.querySelectorAll<HTMLElement>('[data-link-hover="root"]')
  hoverElements.forEach((element) => {
    new BaseHoverTransition({ element, durationIn: 0.1, durationOut: 0.15 })
  })
</script>
